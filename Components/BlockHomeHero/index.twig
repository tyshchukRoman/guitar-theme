<flynt-component name="BlockHomeHero">
  <div class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <div class="hero-badge">
          <span>●</span> New: AI-powered chord recognition
        </div>
        <h1>Master guitar with <span class="highlight">interactive</span> lessons</h1>
        <p class="hero-description">
          Learn at your own pace with our visual fretboard trainer.
          From beginner chords to advanced techniques — all in one platform.
        </p>
        <div class="hero-buttons">
          <a href="#pricing" class="button">
            Start Learning →
          </a>
          <a href="#features" class="button button--secondary">
            See How It Works
          </a>
        </div>
        <div class="hero-stats">
          {% set stats = [
            { value: '50K+', label: 'Active Students' },
            { value: '200+', label: 'Video Lessons' },
            { value: '4.9',  label: 'App Rating' },
          ] %}
          {% for stat in stats %}
            <div class="stat">
              <div class="stat-value">{{ stat.value }}</div>
              <div class="stat-label">{{ stat.label }}</div>
            </div>
          {% endfor %}
        </div>
      </div>

      {# Interactive Guitar #}
      <div class="guitar-wrapper">
        <div class="guitar-card">
          <div class="guitar-header">
            <span class="guitar-title">Try it — Click a chord</span>
            <div class="guitar-controls">
              {% set chords = ['C', 'G', 'Am', 'F', 'D', 'Em'] %}
              {% for chord in chords %}
                <button class="chord-btn" data-chord="{{ chord }}">{{ chord }}</button>
              {% endfor %}
            </div>
          </div>

          <div class="guitar-neck">
            <div class="fretboard">
              <div class="nut"></div>
              <div class="fretboard-grid" id="fretboard">
                <div class="string-labels">
                  {% set strings = ['E', 'B', 'G', 'D', 'A', 'E'] %}
                  {% for string in strings %}
                    <div class="string-label">{{ string }}</div>
                  {% endfor %}
                </div>
                {# Frets generated by JS #}
              </div>
            </div>
          </div>

          <div class="guitar-footer">
            <div class="guitar-footer-row">
              <span class="guitar-hint">Click frets to play notes</span>
              <div class="footer-controls">
                <button class="clear-btn" id="clearBtn">Clear</button>
                <div class="sound-toggle">
                  <span>Sound</span>
                  <div class="toggle-switch active" id="soundToggle"></div>
                </div>
              </div>
            </div>
            <div class="song-player">
              <button class="play-btn" id="playBtn">▶</button>
              <div class="song-info">
                <div class="song-title" id="songTitle">Greensleeves</div>
                <div class="song-progress">
                  <div class="song-progress-bar" id="progressBar"></div>
                </div>
              </div>
              <select class="song-select" id="songSelect">
                {% set songs = [
                  { value: 'greensleeves',        label: 'Greensleeves' },
                  { value: 'houseoftherisingsun', label: 'House of the Rising Sun' },
                  { value: 'amazinggrace',        label: 'Amazing Grace' },
                ] %}
                {% for song in songs %}
                  <option value="{{ song.value }}">{{ song.label }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</flynt-component>
