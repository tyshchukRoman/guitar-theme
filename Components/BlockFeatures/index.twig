<flynt-component name="BlockFeatures">
  <div class="features" id="features">
    <div class="section-container">
      <div class="section-header">
        <div class="section-label">Features</div>
        <h2 class="section-title">Everything you need to learn guitar</h2>
        <p class="section-description">
          Our platform combines visual learning with hands-on practice
          to accelerate your guitar journey.
        </p>
      </div>

      <div class="features-grid">
        {% set features = [
          {
            title: 'Interactive Fretboard',
            description: 'Visual chord diagrams that show exactly where to place your fingers. Practice anywhere, anytime.',
            icon: '<path d="M11.5 2a8.5 8.5 0 0 1 0 17v3l-3-3-3 3v-3a8.5 8.5 0 0 1 6-16z"/><circle cx="11.5" cy="10.5" r="3"/><path d="M11.5 7.5v-2M14.5 10.5h2M11.5 13.5v2M8.5 10.5h-2"/>',
          },
          {
            title: 'HD Video Lessons',
            description: '200+ professionally filmed lessons from beginner basics to advanced techniques.',
            icon: '<rect x="2" y="4" width="20" height="14" rx="2"/><circle cx="12" cy="11" r="3"/><path d="M10.5 9.5l4 3-4 3z" fill="currentColor"/>',
          },
          {
            title: 'Progress Tracking',
            description: 'Set goals, track your practice time, and watch your skills improve over time.',
            icon: '<path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83"/><circle cx="12" cy="12" r="4"/><path d="M12 8v4l2 2"/>',
          },
          {
            title: 'Song Library',
            description: 'Learn your favorite songs with tabs, chords, and play-along backing tracks.',
            icon: '<path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/><path d="M9 9l12-2"/>',
          },
          {
            title: 'AI Feedback',
            description: 'Get real-time feedback on your playing through our audio recognition technology.',
            icon: '<path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" y1="19" x2="12" y2="22"/><path d="M8 22h8"/><path d="M3 10l1.5 1.5M21 10l-1.5 1.5M3 14l1.5-1.5M21 14l-1.5-1.5"/>',
          },
          {
            title: 'Community',
            description: 'Connect with fellow learners, share progress, and get tips from experienced players.',
            icon: '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>',
          },
        ] %}

        {% for feature in features %}
          <div class="feature-card">
            <div class="feature-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                {{ feature.icon|raw }}
              </svg>
            </div>
            <h3>{{ feature.title }}</h3>
            <p>{{ feature.description }}</p>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</flynt-component>
