<flynt-component name="BlockInstructions">
  <div class="instructors" id="instructors">
    <div class="section-container">
      <div class="section-header">
        <div class="section-label">Instructors</div>
        <h2 class="section-title">Learn from the best</h2>
        <p class="section-description">
          Our instructors have decades of combined experience and a passion for teaching.
        </p>
      </div>

      <div class="instructors-grid">
        {% set instructors = [
          {
            name: 'Marcus Chen',
            role: 'Acoustic Specialist',
            bio: '15 years teaching, Berklee graduate',
            image: 'images/acoustic-specialist.jpg',
          },
          {
            name: 'Sarah Williams',
            role: 'Fingerstyle Expert',
            bio: 'YouTube educator, 2M subscribers',
            image: 'images/fingerstyle-expert.jpg',
          },
          {
            name: 'James Rodriguez',
            role: 'Blues & Rock',
            bio: 'Session guitarist, 20+ albums',
            image: 'images/blues-rock-guitar.jpg',
          },
          {
            name: 'Emily Park',
            role: 'Music Theory',
            bio: 'PhD in Music, award-winning educator',
            image: 'images/music-theory-instructor.jpg',
          },
        ] %}

        {% for instructor in instructors %}
          <div class="instructor-card">
            <div class="instructor-image">
              <img src="{{ instructor.image }}" alt="{{ instructor.name }}">
            </div>
            <div class="instructor-name">{{ instructor.name }}</div>
            <div class="instructor-role">{{ instructor.role }}</div>
            <p class="instructor-bio">{{ instructor.bio }}</p>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</flynt-component>
